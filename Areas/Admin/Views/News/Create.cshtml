@model Models.NewsModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ثبت خبرها</title>

</head>
<body>
    <div style="width:70%;margin:10px auto;">
        <div class="jumbotron text-center">
            <h3>ثبت خبر ها</h3>
        </div>
    </div>

    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">اطلاعات خبر</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">تصاویر</a>


        </div>


        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

                <form asp-controller="News" asp-action="Create" method="post">
                    <div></div>
                    <input type="hidden" asp-for="ID" />
                    <input type="hidden" asp-for="CommentID" />

                    <div class="form-group" id="tab1">
                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="Title">
                    </div>


                    <div class="form-group">
                        <label asp-for="FullText"></label>
                        <textarea class="form-control" asp-for="FullText"></textarea>
                    </div>


                    <div class="form-group" id="tab1">
                        <label asp-for="CategoryID"></label>
                        <select class="form-control" asp-items="@Model.Categories" asp-for="CategoryID"></select>
                    </div>


                    <div class="form-group" id="tab1">
                        <label asp-for="UserID"></label>
                        <select class="form-control" asp-items="@Model.Users" asp-for="UserID"></select>
                    </div>




                    <button type="submit" class="btn btn-primary">ثبت</button>

                </form>






            </div>

            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            
            <div>
                <button class="btn-danger">ثبت تصویر</button>

            </div>
            
            
            </div>
        </div>
    </nav>
</body>
</html>